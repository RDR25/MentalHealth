<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
   <androidx.cardview.widget.CardView
       android:layout_margin="20dp"
       android:elevation="40dp"
       android:id="@+id/cardVideoId"
       android:clickable="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:src="@drawable/yogaimg"
               android:contentDescription="Video"
               android:id="@+id/med_videoImg"
               android:layout_width="180dp"
               android:background="@color/rdr2"
               android:layout_height="100dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/med_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Title"
                   android:textAppearance="?attr/textAppearanceHeadline6"
                   android:padding="10dp"
                   />
               <TextView
                   android:id="@+id/med_discription"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Video discriptiokulguihijjkbjnkvjbkjhvhjvjjvjvjvvv"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:paddingBottom="10dp"
                   android:textAppearance="?attr/textAppearanceBody2"
                   android:textColor="?android:attr/textColorSecondary"
                   />
           </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>
</RelativeLayout>