<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_chat_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:padding="6dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/senderbg"
                android:src="@drawable/chatbot1"
                android:contentDescription="icon" />
            <TextView
                android:backgroundTint="@color/grey"
                android:background="@drawable/rounded_corner"
                android:padding="14dp"
                android:id="@+id/left_chat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rdr2"
                android:text="Hello!jhkhjlihhhhhhhhhhhhhhhhhhhh"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="60dp"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:maxWidth="220dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="@color/rdr3"
                android:background="@drawable/rounded_corner"
                android:padding="14dp"
                android:id="@+id/right_chat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Hello!jhkhjlihhhhhhhhhhhhhhhhhhhh"
                />
            <ImageView
                android:padding="6dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/rdr3"
                android:background="@drawable/senderbg"
                android:src="@drawable/user_icon"
                android:contentDescription="icon" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>